<h1>Listing item_deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Purchase order</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Date recieved</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_deliveries.each do |item_delivery| %>
      <tr>
        <td><%= item_delivery.item %></td>
        <td><%= item_delivery.purchase_order %></td>
        <td><%= item_delivery.quantity %></td>
        <td><%= item_delivery.unit %></td>
        <td><%= item_delivery.date_recieved %></td>
        <td><%= link_to 'Show', item_delivery %></td>
        <td><%= link_to 'Edit', edit_item_delivery_path(item_delivery) %></td>
        <td><%= link_to 'Destroy', item_delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

