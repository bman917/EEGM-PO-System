<%=javascript_tag do %>

$(document).ready(function(){
    purchaseOrderShowInit();
});

<% end %>

<div class="purcahse_order_show">
  <div class="sub_section">
    <div class="float_right">
      <%= @purchase_order.po_date.to_time.to_s(:long) %>
    </div>
    <div>Purchase Order: E.Estanislao General Merchandize</div>
  </div>

  <div class="sub_section">

    <div class="float_right">
      <strong> Purchase Order </strong>
      <h2 class="emphasize med_text">#<%= sprintf '%07d', @purchase_order.id %></h2>
    </div>

    <div>
      <strong>Order To:</strong>
      <h2 class="emphasize med_text"><%= @purchase_order.supplier %></h2>
    </div>
  </div>

    <%=render 'contact_details_section'%>

    <%=render 'purchase_item_section'%>

    <% if  @purchase_order.notes != nil%>
      <div class="section">
        <p>
          <strong>Notes:</strong>
          <%= @purchase_order.notes %>
        </p>
      </div>
      <% end %>


  <div class="no-print">
    <hr/>
    <%= link_to 'Deliveries', '', id: "add_delivery_link", class: "button_link" %>
    <div class="deliveries_section">
       <%= render 'deliveries_form' %>
       <%= link_to 'Hide', '', id: "hide_delivery_section_link", class: "button_link" %>
    </div>
  </div>

  </div>
  
    <div class="no-print actions">
    <%= link_to 'Back To Purchase Orders List', purchase_orders_path%>
    </div>

</div>


