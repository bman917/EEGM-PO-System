<h1>Purchase Orders</h1>

<table id="po_table">
  <thead>
    <tr>
      <th class="small_column">Order Date</th>
      <th>Supplier</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.po_date %></td>
        <td><%= purchase_order.supplier %></td>
        <td class="description_column"><%= truncate purchase_order.items_description, length: 70 %></td>
        <td class="smaller_column"><%= link_to 'Show', purchase_order %></td>
        <td class="smaller_column"><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td class="smaller_column"><%= link_to 'Delete', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

